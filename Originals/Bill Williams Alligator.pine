//@version=3
study("Bill Williams. Alligator, Fractals & Res-Sup combined", shorttitle="ğŸ² AlFReSco", overlay=true)

// Alligator
smma(src, length) =>
    smma = 0.0
    smma := na(smma[1]) ? sma(src, length) : (smma[1] * (length - 1) + src) / length
lipsLength  = input(title="ğŸ² Lips Length", defval=5)
teethLength = input(title="ğŸ² Teeth Length", defval=8)
jawLength   = input(title="ğŸ² Jaw Length", defval=13)
lipsOffset  = input(title="ğŸ² Lips Offset", defval=3)
teethOffset = input(title="ğŸ² Teeth Offset", defval=5)
jawOffset   = input(title="ğŸ² Jaw Offset", defval=8)
lips        = smma(hl2, lipsLength)
teeth       = smma(hl2, teethLength)
jaw         = smma(hl2, jawLength)
plot(title="ğŸ² Lips", series=lips, color=green, transp=75, offset=lipsOffset)
plot(title="ğŸ² Teeth", series=teeth, color=red, transp=75, offset=teethOffset)
plot(title="ğŸ² Jaw", series=jaw, color=blue, transp=75, offset=jawOffset)

// Fractals
n = input(title="ğŸ“Œ Period", defval=2, minval=2, type=integer)
upFractal =
 ((high[n+2] < high[n]) and (high[n+1] < high[n]) and (high[n-1] < high[n]) and (high[n-2] < high[n])) or
 ((high[n+3] < high[n]) and (high[n+2] < high[n]) and (high[n+1] == high[n]) and (high[n-1] < high[n]) and (high[n-2] < high[n])) or
 ((high[n+4] < high[n]) and (high[n+3] < high[n]) and (high[n+2] == high[n]) and (high[n+1] <= high[n]) and (high[n-1] < high[n]) and (high[n-2] < high[n])) or
 ((high[n+5] < high[n]) and (high[n+4] < high[n]) and (high[n+3] == high[n]) and (high[n+2] == high[n]) and (high[n+1] <= high[n]) and (high[n-1] < high[n]) and (high[n-2] < high[n])) or
 ((high[n+6] < high[n]) and (high[n+5] < high[n]) and (high[n+4] == high[n]) and (high[n+3] <= high[n]) and (high[n+2] == high[n]) and (high[n+1] <= high[n]) and (high[n-1] < high[n]) and (high[n-2] < high[n]))
dnFractal =
 ((low[n+2] > low[n]) and (low[n+1] > low[n]) and (low[n-1] > low[n]) and (low[n-2] > low[n])) or
 ((low[n+3] > low[n]) and (low[n+2] > low[n]) and (low[n+1] == low[n]) and (low[n-1] > low[n]) and (low[n-2] > low[n])) or
 ((low[n+4] > low[n]) and (low[n+3] > low[n]) and (low[n+2] == low[n]) and (low[n+1] >= low[n]) and (low[n-1] > low[n]) and (low[n-2] > low[n])) or
 ((low[n+5] > low[n]) and (low[n+4] > low[n]) and (low[n+3] == low[n]) and (low[n+2] == low[n]) and (low[n+1] >= low[n]) and (low[n-1] > low[n]) and (low[n-2] > low[n])) or
 ((low[n+6] > low[n]) and (low[n+5] > low[n]) and (low[n+4] == low[n]) and (low[n+3] >= low[n]) and (low[n+2] == low[n]) and (low[n+1] >= low[n]) and (low[n-1] > low[n]) and (low[n-2] > low[n]))
plotshape(title="ğŸ“Œ Up-Fractal", series=upFractal, style=shape.triangleup, location=location.abovebar, offset=-2, color=olive, transp=25)
plotshape(title="ğŸ“Œ Down-Fractal", series=dnFractal, style=shape.triangledown, location=location.belowbar, offset=-2, color=maroon, transp=25)

// Resistance, Support
showRS   = input(title="â¤’â¤“ Show Res-Sup", defval=true)
lengthRS = input(title="â¤’â¤“ Res-Sup Length", defval=13, type=integer)
highRS   = valuewhen(high >= highest(high, lengthRS), high, 0)
lowRS    = valuewhen(low <= lowest(low, lengthRS), low, 0)
plot(title="â¤’ Resistance", series=showRS and highRS ? highRS : na, color=highRS != highRS[1] ? na : olive, linewidth=1, transp=25, offset=0)
plot(title="â¤“ Support", series=showRS and lowRS ? lowRS : na, color=lowRS != lowRS[1] ? na : maroon, linewidth=1, transp=25, offset=0)